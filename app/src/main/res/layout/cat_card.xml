<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cat_card_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="6"
            app:layout_constraintBottom_toTopOf="@id/name_title_card_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/name_title_card_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="NAME: "
            android:textSize="12dp"
            android:textStyle="bold"
            android:padding="8dp"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toTopOf="@id/desc_title_card_tv"
            app:layout_constraintRight_toLeftOf="@id/name_content_card_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cat_card_iv"/>

        <TextView
            android:id="@+id/name_content_card_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="cat_name"
            android:textSize="12dp"
            android:padding="8dp"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintBottom_toTopOf="@id/desc_content_card_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/name_title_card_tv"
            app:layout_constraintTop_toBottomOf="@id/cat_card_iv"/>

        <TextView
            android:id="@+id/desc_title_card_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="DESCRIPTION: "
            android:textSize="12dp"
            android:textStyle="bold"
            android:padding="8dp"
            app:layout_constraintVertical_weight="3"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/desc_content_card_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_title_card_tv"/>

        <TextView
            android:id="@+id/desc_content_card_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="cat_desc"
            android:textSize="12dp"
            android:padding="8dp"
            app:layout_constraintVertical_weight="3"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/desc_title_card_tv"
            app:layout_constraintTop_toBottomOf="@id/name_content_card_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>